<html lang="en">
 <head>
    <meta charset="utf-8">
    <meta name="description" content="The HTML5 Herald">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
   
</head>

 <body>
    <div class="row" style="margin-top: 135px;">
        <div class="col-4"></div>
        <div class="col-3 scraper-form ">
            <div class="mt-5 mb-5">
               <h1 style="text-align: center;">Trip advisor scraper </h1>
            </div>
            <form action="/fetchRestaurantData" method='post'> 
                <div class="row mb-3">
                    <div class="col-2"></div>
                    <p class="col-10 form-label">Url:</p>
                    <div class="col-2"></div>
                    <input class='input-form col-8' type='text' name='url' required>
                </div>
                <div class="row mb-4">
                    <div class="col-2"></div>
                    <p class="col-10 form-label">City Name:</p>
                    <div class="col-2"></div>
                    <input class='input-form col-8' type='text' name='fileName' required>
                </div>
                <div class="row mb-4">
                    <div class="col-2"></div>
                    <p class="col-10 form-label">Page Number:</p>
                    <div class="col-2"></div>
                    <input class='input-form col-8' type='text' name='pageNumber' required>
                </div>
                <div class="row mb-5">
                    <div class="col-2"></div>
                    <button class="submit-btn col-8 btn">Submit </button>
                </div>
            </form>
            </div>
        <div class="col-4"></div>
   </div>
 </body>
 
 <style>
 .scraper-form {
  background: #FFFFFF;
  box-shadow: 0px 4px 7px rgba(121, 121, 121, 0.2);
  border-radius: 3px;
}

.input-form {
    border: 1px solid #E0E0E0;
    box-sizing: border-box;
    border-radius: 3px;
    height: 42px;
}

.submit-btn {
    background: #FFAB00;
    border-radius: 3px;
    height: 42px;
    font-family: Muli;
    font-style: normal;
    font-weight: bold;
    font-size: 16px;
    line-height: 17px;
    text-align: center;
    color: #FFFFFF;
}
.form-label {
    font-family: Nunito Sans;
    font-style: normal;
    font-weight: bold;
    font-size: 18px;
    color: #BDBFC9;
}
 </style>
 </html>